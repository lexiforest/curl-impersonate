+  if(nwritten < blen) {
+    fprintf(stderr, "[t-%d] write failure\n", t->idx);
+    return 0;
+  }
+  t->recv_size += (curl_off_t)nwritten;
+  if(t->fail_at > 0 && t->recv_size >= t->fail_at) {
+    fprintf(stderr, "[t-%d] FAIL by write callback at %ld bytes\n",
+            t->idx, (long)t->recv_size);
